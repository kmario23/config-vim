\documentclass{article}

%% general
\usepackage[top=1.75in,left=1.75in,right=1.75in,bottom=1.75in]{geometry}
\usepackage[colorlinks,linktocpage,citecolor=blue,linkcolor=blue,urlcolor=blue]{hyperref}

%% math
\usepackage{amsmath,amsfonts,amssymb,amsthm}

%% figures
\usepackage{graphicx}
\usepackage[labelfont=bf,subrefformat=simple,labelformat=simple,margin=0.25in,font=small]{subcaption}
\usepackage[margin=0.25in,font=small,labelfont=bf]{caption}

%% symbols
\newcommand{\R}{\mathbb{R}}
\newcommand{\T}{\mathsf{T}}
\newcommand{\N}{\mathcal{N}}
\newcommand{\Nn}{\mathbb{N}}
\newcommand{\E}{\mathbb{E}}
\newcommand{\bigO}{\mathcal{O}}
\newcommand{\iid}[1]{\stackrel{\text{iid}}{#1}}
\newcommand\indep{\protect\mathpalette{\protect\independenT}{\perp}}
\def\independenT#1#2{\mathrel{\rlap{$#1#2$}\mkern4mu{#1#2}}}
\DeclareMathOperator{\tr}{tr}
\DeclareMathOperator{\KL}{KL}
\DeclareMathOperator*{\argmin}{arg\,min}
\DeclareMathOperator*{\argmax}{arg\,max}
\newcommand{\given}{\, | \,}
\DeclareMathOperator{\diag}{diag}
\let\vec\relax% Set equal to \relax so that LaTeX thinks it's not defined
\DeclareMathOperator{\vec}{vec}

%% todos
% \usepackage[disable]{todonotes}
\usepackage{todonotes}

%% bibliography
\usepackage[
